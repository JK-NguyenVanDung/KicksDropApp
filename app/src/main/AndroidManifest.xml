<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.kicksdrop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"

        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KicksDrop">
        <activity
            android:name=".ui.customerOrder.CustomerOrder"
            android:exported="true" />
        <activity
            android:name=".ui.orderCompleted.OrderCompleted"
            android:exported="true" />
        <activity
            android:name=".ui.auth.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.searchView.SearchViewProduct"
            android:exported="true" />
        <activity
            android:name=".ui.productBrands.ProductBrands"
            android:exported="true" />
        <activity
            android:name=".ui.profileuser.EditProfileUser"
            android:exported="true" />
        <activity
            android:name=".ui.coupon.CouponPage"
            android:exported="true" />
        <activity
            android:name=".ui.cart.CartListView"

            android:exported="true" />
        <activity
            android:name=".ui.cart.CartOrder"
            android:exported="true" />
        <activity
            android:name=".ui.product.ProductDetail"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            >
            <nav-graph android:value="@navigation/mobile_navigation"/>
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ChatActivity"
            android:exported="false"/>
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
