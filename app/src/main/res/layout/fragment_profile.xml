<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/navigation_bar_wishlist_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="22dp"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:gravity="center_horizontal"
                    android:text="KICKS DROP"
                    android:textColor="#333333"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/imageview_profile_user_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/user_profile"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_title" />

                <TextView
                    android:id="@+id/tv_profile_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:gravity="center_horizontal"

                    android:text="Bảo Nguyên"
                    android:textAllCaps="false"
                    android:textColor="#333333"

                    android:textSize="24sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageview_profile_user_image" />

                <Button
                    android:id="@+id/btn_profile_user_wishlist"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:outlineAmbientShadowColor="#FFFFFF"

                    android:outlineSpotShadowColor="#FFFFFF"

                    android:padding="0dp"

                    android:text="Wishlist"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_user_notification"
                    app:srcCompat="@drawable/ic_line" />

                <Button
                    android:id="@+id/btn_profile_user_Profile"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:outlineAmbientShadowColor="#FFFFFF"
                    android:outlineSpotShadowColor="#FFFFFF"

                    android:padding="0dp"

                    android:text="Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_user_profile"
                    app:srcCompat="@drawable/ic_line" />

                <Button
                    android:id="@+id/tv_profile_user_notification"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:outlineAmbientShadowColor="#FFFFFF"

                    android:outlineSpotShadowColor="#FFFFFF"

                    android:padding="0dp"

                    android:text="Notification"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_user_wishlist"
                    app:srcCompat="@drawable/ic_line" />

                <Button
                    android:id="@+id/btn_profile_user_address"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:outlineAmbientShadowColor="#FFFFFF"

                    android:outlineSpotShadowColor="#FFFFFF"

                    android:padding="0dp"

                    android:text="Address"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="349dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_user_Address"
                    app:srcCompat="@drawable/ic_line" />

                <Button
                    android:id="@+id/tv_profile_user_signOut"
                    android:layout_width="345dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:outlineAmbientShadowColor="#FFFFFF"

                    android:outlineSpotShadowColor="#FFFFFF"

                    android:padding="0dp"

                    android:text="Sign out"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>