<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="365dp"
    android:layout_height="160dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="0dp"

    >


    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/iv_item_product_OptionCart_roundedImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/iv_item_productCart_addToCart_image"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/product_version_adidas_new_second" />

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/navigation_itemproductCart_addToCart_viewList_color"
                        android:layout_width="160dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="125dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <HorizontalScrollView
                                android:id="@+id/hs_item_productCart_addToCart_viewListColor"


                                android:layout_width="168dp"
                                android:layout_height="33dp"

                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"

                                android:layout_marginEnd="243dp"
                                android:layout_marginBottom="0dp"

                                android:scrollbars="none"

                                tools:ignore="SpeakableTextPresentCheck">

                                <LinearLayout
                                    android:layout_width="186dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginBottom="1dp"

                                    android:divider="@android:color/transparent"
                                    android:scrollbars="none">

                                    <ImageButton
                                        android:id="@+id/wishlist_ibtn_yellow"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/ic_yellow_color"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                                    <ImageButton
                                        android:id="@+id/ibtn_item_productCart_addToCart_greenColor"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/ic_green_color"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                                    <ImageButton
                                        android:id="@+id/ibtn_item_productCart_addToCart_grayColor"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/ic_gray_color"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                                    <ImageButton
                                        android:id="@+id/ibtn_item_productCart_addToCart_blueColor"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/ic_blue_color"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    <ImageButton
                                        android:id="@+id/ibtn_item_productCart_addToCart_whiteColor"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/ic_white_color"
                                        tools:ignore="SpeakableTextPresentCheck" />

                                    <ImageButton
                                        android:id="@+id/ibtn_item_productCart_addToCart_orangeColor"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:backgroundTint="#00FFFFFF"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/orange_color"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </LinearLayout>
                            </HorizontalScrollView>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.core.widget.NestedScrollView>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wishlist_tv_productName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text='Nike Air Force 1 "07'
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/wishlist_ibtn_remove"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:src="@drawable/ic_remove_product_cart"
                android:textColor="#777777"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck"
                android:contentDescription="@string/todo" />


        </LinearLayout>

        <TextView
            android:id="@+id/wishlist_tv_productCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:gravity="center_vertical"
            android:text="90.00$"
            android:textColor="#777777"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/wishlist_tv_productType"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/wishlist_tv_productCost"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="men shoes"
            android:textColor="#444444"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wishlist_tv_productType"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne">

            <TextView
                android:layout_width="31dp"
                android:layout_height="21dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="size"
                android:textColor="#444444"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/wishlist_spinner_dropDownSize"

                android:layout_width="100dp"
                android:layout_height="20dp"


                android:background="@drawable/border_radius_gray_light"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/wishlist_roundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_itemProductCart_sectionTwo"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:backgroundTint="@color/black"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/wishList_btn_add"

                android:layout_width="130dp"
                android:layout_height="30dp"

                android:layout_below="@+id/navigation_bar_item_viewList_color"


                android:backgroundTint="@android:color/black"
                android:padding="0sp"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>