<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="365dp"
    android:layout_height="143dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="0dp"

    >


    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_item_product_cart_roundedImage"
            android:layout_width="160dp"
            android:layout_height="143dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_item_product_cart_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/product_version_adidas_new_second" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_roundedImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemProductCart_tv_listView_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text='Nike Air Force 1 "07'
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/itemProductCart_ibtn_listViewRemove"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:src="@drawable/ic_remove_product_cart"
                android:textColor="#777777"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemProductCart_tv_listViewType"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_marginStart="10dp"

            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_roundedImage"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="men shoes"
            android:textColor="#444444"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemProductCart_tv_listViewType"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_roundedImage">

            <TextView
                android:id="@+id/tv_item_productCart_listView_size"

                android:layout_width="31dp"
                android:layout_height="21dp"

                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:text="Size"
                android:textColor="#444444"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/itemProductCart_sp_listViewDropDownSize"
                android:layout_width="100dp"
                android:layout_height="20dp"

                android:background="@drawable/border_radius_gray_light"

                android:spinnerMode="dropdown"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionThree"
            android:layout_width="wrap_content"
            android:layout_height="24dp"

            android:layout_below="@+id/linearlayout_itemProductCart_sectionTwo"

            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_roundedImage">

            <TextView
                android:id="@+id/tv_item_productCart_listView_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal|center_vertical"

                android:text="Amount"
                android:textColor="#444444"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/itemProductCart_sp_listViewDropDownAmount"

                android:layout_width="45dp"
                android:layout_height="20dp"

                android:layout_marginEnd="51dp"

                android:layout_marginBottom="108dp"

                android:background="@drawable/border_radius_gray_light"
                android:spinnerMode="dropdown"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/navigation_item_productCart_listView_viewList_color"
            android:layout_width="0dp"
            android:layout_height="25dp"

            android:layout_below="@+id/linearlayout_itemProductCart_sectionThree"
            android:layout_alignEnd="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_roundedImage"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/hs_item_productCart_listView_listColor"

                    android:layout_width="170dp"
                    android:layout_height="match_parent"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/border_radius_gray_light"

                    android:scrollbars="none"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="186dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:divider="@android:color/transparent"
                        android:gravity="center_vertical"

                        android:scrollbars="none">

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn__listViewYellowColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_yellow_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn_listViewGreenColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_green_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn_listViewGrayColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_gray_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn_listViewBlueColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_blue_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn_listViewWhiteColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_white_color"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/itemProductCart_ibtn_listViewOrangeColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="@android:color/transparent"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/orange_color"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>