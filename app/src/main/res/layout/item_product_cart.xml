<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="361dp"
    android:layout_height="140dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="0dp"

    >


    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="139dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_product_cart_image"

            android:layout_width="167dp"
            android:layout_height="wrap_content"

            android:contentDescription="@string/todo"
            android:src="@drawable/product" />

        <TextView
            android:id="@+id/tv_item_product_cart_name"

            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="115dp"

            android:layout_toEndOf="@+id/iv_item_product_cart_image"

            android:gravity="center_vertical"
            android:text="@string/nike_air_force_1_07"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_item_product_cart_cost"

            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="143dp"
            android:layout_marginBottom="91dp"

            android:layout_toEndOf="@+id/iv_item_product_cart_image"

            android:gravity="center_vertical"
            android:text="@string/_90_00"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_product_cart_type"

            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="69dp"

            android:layout_toEndOf="@+id/iv_item_product_cart_image"
            android:gravity="center_vertical"
            android:text="@string/men_shoes"
            android:textColor="#444444"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_product_cart_size"

            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="49dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_image"
            android:gravity="center_vertical"

            android:text="@string/size"
            android:textColor="#444444"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_item_product_cart_AddToCart"

            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="54dp"

            android:layout_marginEnd="63dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/iv_item_product_cart_image"

            android:backgroundTint="@color/black"
            android:paddingLeft="0dp"


            android:paddingRight="0dp"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/ibtn_item_product_cart_remove"

            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="313dp"
            android:layout_marginTop="0dp"

            android:layout_marginEnd="50dp"
            android:layout_marginBottom="94dp"

            android:background="#00FFFFFF"
            android:contentDescription="TODO"

            android:minWidth="48dp"
            android:minHeight="32dp"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/ic_remove_product_cart"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/ibtn_item_product_cart_imagePage"
            android:layout_width="31dp"
            android:layout_height="24dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="381dp"
            android:layout_marginBottom="115dp"

            android:background="#00FFFFFF"
            android:minWidth="32dp"

            android:minHeight="32dp"

            app:srcCompat="@drawable/ic_group_pictures_product"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck"
            android:contentDescription="TODO" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/navigation_bar_item_viewList_color"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/hs_item_viewList_color"

                    android:layout_width="168dp"
                    android:layout_height="33dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="0dp"

                    android:scrollbars="none"

                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="1dp"

                        android:divider="@android:color/transparent"
                        android:scrollbars="none">

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_yellowColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ic_yellow_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                             />

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_greenColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ic_green_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                             />

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_grayColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ic_gray_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                            android:contentDescription="TODO" />

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_blueColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ic_blue_color"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                            android:contentDescription="TODO" />

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_whiteColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ic_white_color"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:contentDescription="TODO" />

                        <ImageButton
                            android:id="@+id/ibtn_item_product_cart_orangeColor"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/orange_color"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:contentDescription="TODO" />
                    </LinearLayout>


                </HorizontalScrollView>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <Spinner
            android:id="@+id/sp_item_product_cart_dropDownSize"

            android:layout_width="130dp"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="49dp"
            android:layout_marginBottom="49dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>